// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(uuid())
  phoneNumber           String   @unique
  whatsappCode          String?
  whatsappCodeExpiresAt DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  guests      Guest[]
  events      Event[]
  invitations Invitation[]
  payments    Payment[]

  @@index([phoneNumber])
}

model Event {
  id              String   @id @default(uuid())
  userId          String
  name            String
  date            DateTime?
  location        String?
  description     String?
  cardDesignImageUrl String?  // User-uploaded card design image
  cardTemplateConfig Json?     // Template config for name and QR placement
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  guests Guest[]

  @@index([userId])
}

model Guest {
  id        String   @id @default(uuid())
  userId   String
  eventId  String
  name      String
  mobile    String
  type      String   // 'Single' or 'Double'
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  invitationGuests InvitationGuest[]

  @@index([userId])
  @@index([eventId])
  @@index([code])
}

model CardDesign {
  id            String   @id @default(uuid())
  name          String
  thumbnailUrl  String
  templateUrl   String
  templateConfig Json?   // Template definition for visual builder
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  invitations Invitation[]
}

model Invitation {
  id           String   @id @default(uuid())
  userId       String
  cardDesignId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardDesign CardDesign  @relation(fields: [cardDesignId], references: [id])
  payments   Payment[]
  invitationGuests InvitationGuest[]

  @@index([userId])
}

model Payment {
  id            String   @id @default(uuid())
  userId        String
  invitationId  String
  amount        Decimal  @db.Decimal(10, 2)
  currency      String   @default("USD")
  status        String   // 'pending' | 'completed' | 'failed'
  paymentMethod String
  transactionId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  invitation Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([invitationId])
  @@index([status])
}

model InvitationGuest {
  invitationId String
  guestId      String

  invitation Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)
  guest       Guest      @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@id([invitationId, guestId])
}

