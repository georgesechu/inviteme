{
  "name": "inviteme",
  "version": "1.0.0",
  "private": true,
  "description": "Wedding invitation card management system",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "build": "npm run build --workspaces",
    "build:server": "npm run build --workspace=packages/server",
    "build:web": "npm run build --workspace=packages/web",
    "build:mobile": "npm run build --workspace=packages/mobile",
    "typecheck": "npm run typecheck --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
